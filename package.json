{
  "name": "doenetml",
  "description": "Semantic markup for building interactive web activities",
  "version": "0.6.0",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/Doenet/DoenetML#readme",
  "private": false,
  "repository": "github:Doenet/DoenetML",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "compile_grammar": "npx lezer-generator --output src/Parser/doenet.js src/Parser/doenet.grammar",
    "compile-wasm": "wasm-pack build --target web --dev --features 'web-logging web-debug-log'",
    "compile-wasm-minimal-logging": "wasm-pack build --target web --dev --features web-logging",
    "compile-wasm-no-logging": "wasm-pack build --target web --dev",
    "compile-wasm-release": "wasm-pack build --target web --release --features web-logging",
    "compile-wasm-nightly": "bash -c 'export RUSTFLAGS=\"-Z macro-backtrace\"; rustup run nightly wasm-pack build --target web --dev'",
    "test-cypress-all": "cypress run -b 'chrome' --config video=false --headless",
    "test-node": "wasm-pack test --node"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@lezer/common": "^0.15.10",
    "@lezer/lr": "^0.15.5",
    "@lezer/xml": "^0.15.1",
    "axios": "^0.27.2",
    "better-react-mathjax": "^2.0.1",
    "crypto-js": "^4.1.1",
    "esm-seedrandom": "^3.0.5",
    "hi-base32": "^0.5.1",
    "idb-keyval": "^6.2.0",
    "math-expressions": "^2.0.0-alpha39",
    "nanoid": "^4.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.0.0",
    "react-dom": "^18.2.0",
    "react-simple-code-editor": "^0.13.0",
    "react-visibility-sensor-v2": "^1.0.0",
    "recoil": "^0.7.4",
    "vite-plugin-plain-text": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@lezer/generator": "^0.15.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "cypress": "^10.3.1",
    "vite": "^2.9.9"
  }
}
